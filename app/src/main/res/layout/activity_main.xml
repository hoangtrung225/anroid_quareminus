<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chaosbringer.squareminus.MainActivity">

    <Button
        android:id="@+id/normalselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="normal"/>

    <Button
        android:id="@+id/easyselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/normalselect"
        android:layout_centerHorizontal="true"
        android:text="easy"/>

    <Button
        android:id="@+id/hardselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/normalselect"
        android:layout_centerHorizontal="true"
        android:text="hard"/>


</RelativeLayout>
